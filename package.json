{
  "name": "url-shortner",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A Node URL shortener.",
  "author": "souzaluan <luan.souza69@hotmail.com>",
  "scripts": {
    "prepare": "husky",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "dev:server": "ts-node-dev src/crosscutting/infra/http/server.ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:create": "cross-var npm run typeorm migration:create ./src/crosscutting/infra/typeorm/migrations/$npm_config_name",
    "migration:run": "npm run typeorm -- migration:run -d ./src/crosscutting/infra/typeorm/helpers/default-data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d ./src/crosscutting/infra/typeorm/helpers/default-data-source.ts"
  },
  "engines": {
    "npm": "10.x",
    "node": "20.x",
    "yarn": "please-use-npm"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.6",
    "eslint": "^8.57.1",
    "git-commit-msg-linter": "^5.0.8",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.3",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20"
  }
}
